<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/logementCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/carddynamic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtNomLogement"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="Nom du logement"
                android:textSize="18sp"
                android:textColor="@color/txtWhite"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dateReservationLogement"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="00/00/00 au 00/00/20"
                android:textColor="@color/txtWhite"
                android:textSize="16sp"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtCodePostal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_location"
                android:drawablePadding="8dp"
                android:text="55000"
                android:textColor="@color/txtWhite"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtRue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:text="18 rue des mimosas"
                android:textColor="@color/txtWhite"
                android:textSize="16sp" />

        </LinearLayout>

        <Button
            android:id="@+id/supabutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:padding="5dp"
            android:background="@drawable/green_button_background"
            android:text="Voir le logement"
            android:textColor="@color/txtWhite" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>