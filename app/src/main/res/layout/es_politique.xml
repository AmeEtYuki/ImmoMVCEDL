<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/PrimaryBackground"
    android:padding="16dp">

    <Button
        android:id="@+id/btnBackPolitique"
        android:layout_width="28dp"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/ic_arrow_back"
        app:layout_constraintBottom_toBottomOf="@+id/titrePolitique"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titrePolitique"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Politique de Confidentialité"
        android:textColor="@color/txtWhite"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/titrePolitique"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Introduction"
                android:textColor="@color/YellowTitle"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bienvenue à CozySpot. Nous nous engageons à protéger votre vie privée. Cette politique de confidentialité explique quelles informations nous recueillons, comment nous les utilisons, et les choix dont vous disposez."
                android:textColor="@color/txtWhite"
                android:textSize="16sp"
                android:lineSpacingExtra="8dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informations que nous collectons"
                android:textColor="@color/YellowTitle"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="a. Informations personnelles: Lorsque vous créez un compte ou utilisez nos services, nous pouvons collecter des informations personnelles telles que votre nom, adresse e-mail, numéro de téléphone et informations de paiement."
                android:textColor="@color/txtWhite"
                android:textSize="16sp"
                android:lineSpacingExtra="8dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="b. Informations de localisation: Nous collectons des informations sur votre emplacement pour fournir des services de localisation."
                android:textColor="@color/txtWhite"
                android:textSize="16sp"
                android:lineSpacingExtra="8dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="c. Informations d'utilisation: Nous recueillons des informations sur votre utilisation de l'application, telles que les pages que vous visitez et les actions que vous effectuez."
                android:textColor="@color/txtWhite"
                android:textSize="16sp"
                android:lineSpacingExtra="8dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Utilisation des informations"
                android:textColor="@color/YellowTitle"                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="a. Fourniture de services: Nous utilisons vos informations pour fournir, maintenir et améliorer nos services."
                android:textColor="@color/txtWhite"
                android:textSize="16sp"
                android:lineSpacingExtra="8dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="b. Communication: Nous pouvons utiliser vos informations pour vous envoyer des mises à jour, des notifications et d'autres informations liées à l'utilisation de CozySpot."
                android:textColor="@color/txtWhite"
                android:textSize="16sp"
                android:lineSpacingExtra="8dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="c. Sécurité: Nous utilisons vos informations pour protéger nos utilisateurs et services."
                android:textColor="@color/txtWhite"
                android:textSize="16sp"
                android:lineSpacingExtra="8dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Partage des informations"
                android:textColor="@color/YellowTitle"                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="a. Avec votre consentement: Nous partagerons vos informations avec des tiers si vous nous y autorisez."
                android:textColor="@color/txtWhite"
                android:textSize="16sp"
                android:lineSpacingExtra="8dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="b. Prestataires de services: Nous pouvons partager vos informations avec des prestataires de services qui nous aident à fournir nos services."
                android:textColor="@color/txtWhite"
                android:textSize="16sp"
                android:lineSpacingExtra="8dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="c. Obligations légales: Nous pouvons divulguer vos informations si la loi l'exige."
                android:textColor="@color/txtWhite"
                android:textSize="16sp"
                android:lineSpacingExtra="8dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sécurité des informations"
                android:textColor="@color/YellowTitle"                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nous mettons en œuvre des mesures de sécurité pour protéger vos informations personnelles."
                android:textColor="@color/txtWhite"
                android:textSize="16sp"
                android:lineSpacingExtra="8dp"
                android:layout_marginBottom="16dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
