<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="8dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/logementReservationCard"
        android:layout_width="386dp"
        android:layout_height="136dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/carddynamic"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtNomLogementpc"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="Nom du logement"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/txtWhite" />

            <TextView
                android:id="@+id/dateReservationLogement"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="00/00/00 au 00/00/20"
                android:textSize="16sp"
                android:textStyle="italic"
                android:textColor="@color/txtWhite" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtCodePostal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_location"
                android:drawablePadding="8dp"
                android:text="55000"
                android:textSize="16sp"
                android:textColor="@color/txtWhite" />

            <TextView
                android:id="@+id/txtRue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:text="18 rue des mimosas"
                android:textSize="16sp"
                android:textColor="@color/txtWhite" />

        </LinearLayout>

        <Button
            android:id="@+id/supabutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/ButtonGreen"
            android:text="Rédiger état des lieux"
            android:textColor="@color/txtWhite" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
