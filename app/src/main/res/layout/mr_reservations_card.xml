<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/reservationsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/carddynamic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtNumReservation"
                android:layout_width="203dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="Numero+Nom du logement"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/txtWhite" />

            <TextView
                android:id="@+id/dateReservationLogement"
                android:layout_width="116dp"
                android:layout_height="36dp"
                android:text="00/00/00 au 00/00/20"
                android:textSize="16sp"
                android:textStyle="italic"
                android:textColor="@color/txtWhite" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtCodePostal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_location"
                android:drawablePadding="8dp"
                android:text="55000"
                android:textSize="16sp"
                android:textColor="@color/txtWhite" />

            <TextView
                android:id="@+id/txtRue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:text="18 rue des mimosas"
                android:textSize="16sp"
                android:textColor="@color/txtWhite" />

        </LinearLayout>

        <TextView
            android:id="@+id/nomClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:text="Nom Client de la réservation"
            android:textSize="16sp"
            android:textColor="@color/txtWhite" />

        <Button
            android:id="@+id/supabutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:padding="5dp"
            android:background="@drawable/green_button_background"
            android:text="Voir la réservation"
            android:textColor="@color/txtWhite" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
